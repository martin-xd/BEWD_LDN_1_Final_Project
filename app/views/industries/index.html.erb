<h1>Industries#index</h1>

<div>
  <h2>Industries in my portfolio</h2>

  <%= link_to("Add New Industry", {:action => 'new'}, :class => 'action new') %></br>

  <table class="listing">
    <tr class="header">
      <th>Industry</th>
      <th>Actions</th>
    </tr>
    <% @industries.each do |industry| %>
    <tr id="table">
      <td class="center"><%= industry.sector %></td>

      <td class="actions">
        <%= link_to "Edit", edit_industry_path(industry) %>

        <%= link_to 'Delete', industry, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </table>
</div> 