<div id="sign_in_container">

	<div id="sign_in_logo"
		<h2>stocksy</h2>
	</div>
		
		<div>
			<h1>Forgot your password?</h1>
			
			<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			  <%= devise_error_messages! %>
			
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email, :autofocus => true, :class => "forgot_password_field" %></div>
						
			  <div><%= f.submit "Send me reset password instructions", :id => "forgot_password_button" %></div>
			<% end %>
			
		</div>
		<div id="links_div">
			<%= render "devise/shared/links" %>
		</div>
</div>




