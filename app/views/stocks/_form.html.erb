<div id="add_stock_container">

<%= form_for(@stock) do |f| %>

  <div>Company 
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "fields" %>
  </div>
  <div>
    <%= f.label :symbol %><br>
    <%= f.text_field :isin, :class => "fields" %>
  </div>
  <div>
      <%= f.label :country %><br>
      <%= f.select :country_id , Country.all.collect {|country| [country.name, country.id] },{}, id: "pull_down" %>
  </div>
  <div>
      <%= f.label :industry %><br>
      <%= f.select :industry_id, Industry.all.collect {|industry| [industry.sector, industry.id] },{}, id: "pull_down" %>
  </div>
  <div>
    <%= f.label :volume %><br>
    <%= f.number_field :volume, :class => "fields" %>
  </div>
  <div>
    <%= f.label :purchase_date %> (DD-MM-YYYY)<br>
    <%= f.date_field :purchased_on, :class => "fields" %>
  </div>
  <div>
    <%= f.label :purchase_price %> in US$<br>
    <%= f.number_field :purchase_price , step: :any, :class => "fields" %>
  </div>
  <!-- <div>
    <%= f.label :purchase_value %><br>
    <%= f.number_field :purchase_value , step: :any %>
  </div> -->

  <br>
  <div>
    <%= f.submit "Submit", :id => "add_change_button" %>
  </div>
  <div>
  <%= link_to("Back", {:action => 'index'}, :id => "back_button") %>
  </div>

<% end %>
</div>
